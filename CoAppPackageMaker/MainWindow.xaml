<Window x:Class="CoAppPackageMaker.MainWindow"         
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Base="clr-namespace:CoAppPackageMaker.ViewModels.Base"
        xmlns:ViewModels="clr-namespace:CoAppPackageMaker.ViewModels"
        xmlns:Model="clr-namespace:CoApp.Packaging.Common.Model;assembly=CoApp.Client"
        xmlns:Views="clr-namespace:CoAppPackageMaker.Views" Title="CoAppMaker" 
     
        Height="600" Width="675"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <Base:MainWindowViewModel />
        
    </Window.DataContext>
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>          
            <RowDefinition Height="*" />
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="5"   FlowDirection="LeftToRight" Height="50">
           
            <GroupBox Margin="5" HorizontalAlignment="Right" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                    <Button  Width="20" Margin="5" Content="S"/>
                    <Button  Width="20" Margin="5" Content="U"/>
                    <Button  Width="20" Margin="5" Content="R"/>
                    <Button  Width="35" Margin="5" Content="Reset"/>
                </StackPanel>
            </GroupBox>
        </DockPanel>

        <TabControl Height="390" HorizontalAlignment="Left" Name="tabControl1" VerticalAlignment="Top" Width="639" Grid.Row="1"  Margin="5">
            <TabItem Header="Standard Rules" Name="tabItem1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0*" />
                        <RowDefinition Height="339*" />
                    </Grid.RowDefinitions>
                    <TabControl Height="350" HorizontalAlignment="Left" Margin="6,6,0,0" Name="tabControl2" VerticalAlignment="Top" Width="610" TabStripPlacement="Left" Grid.Row="1">
                        <TabItem Header="Package" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0*" />
                                    <RowDefinition Height="359*" />
                                </Grid.RowDefinitions>
                                <TabControl Height="310" HorizontalAlignment="Left" Margin="6,6,0,0"  VerticalAlignment="Top" Width="450" TabStripPlacement="Bottom" Grid.Row="1">
                                    <TabItem Header="Source Value" >
                                        <Views:PackageView Margin="5,10,5,5" DataContext="{Binding PackageViewModel.SourcePackageViewModel}"/>
                                    </TabItem>
                                    <TabItem Header="Evaluated">
                                        <Views:PackageView Margin="5,10,5,5" DataContext="{Binding PackageViewModel}"/>
                                    </TabItem>
                                    <TabItem Header="Package" >
                                        <TextBlock Text="{Binding PackageViewModel.SourceString}"/>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </TabItem>
                       
                        <TabItem Header="Metadata" Name="tabItem5">
                            <Views:MetadataView Margin="5,10,5,5"/>                          
                        </TabItem>
                       
                        <TabItem Header="Manifest" Name="tabItem7">
                            <Views:ManifestView Margin="5,10,5,5"/>
                        </TabItem>
                        <TabItem Header="Files" Name="tabItem8">
                            <Views:Files  Margin="5,10,5,5"/>
                        </TabItem>
                        <TabItem Header="Package Composition" Name="tabItem9" >
                            <Views:PackageComposition Margin="5,10,5,5"/>
                        </TabItem>
                        <TabItem Header="Requires" Name="tabItem10" >
                            <Views:RequiresView Margin="5,10,5,5"/>
                        </TabItem>
                        <TabItem Header="Signing" Name="tabItem11" >
                            <Views:SigningView Margin="5,10,5,5"/>
                        </TabItem>

                        <TabItem Header="Define" Name="tabItem12" >
                            <Views:DefineView Margin="5,10,5,5"/>
                        </TabItem>
                        <TabItem Header="License" Name="tabItem13" >
                            <Views:LicenseView Margin="5,10,5,5"/>
                        </TabItem>
                        <TabItem Header="Compatibility Policy" Name="tabItem14" >
                            <Views:CompatibilityPolicy Margin="5,10,5,5"/>
                        </TabItem>
                       
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Package Roles rules" Name="tabItem2">
               
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0*" />
                            <RowDefinition Height="339*" />
                        </Grid.RowDefinitions>
                        <TabControl Height="313" HorizontalAlignment="Left" Margin="6,6,0,0" Name="tabControlr2" VerticalAlignment="Top" Width="610" TabStripPlacement="Left" Grid.Row="1">              
                            <TabItem Header="Application" Name="tabItem17" >
                                <Views:ApplicationView Margin="5,10,5,5"/>
                            </TabItem>
                            <TabItem Header="Assembly" Name="tabItem18" >
                                <Views:AssemblyView Margin="5,10,5,5"/>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </TabItem>
            <TabItem Header="Custom Rules" Name="tabItem3">
                <Grid />
            </TabItem>
        </TabControl>
        
        <DockPanel Grid.Row="2" Margin="5"   FlowDirection="LeftToRight" Height="50">
            <GroupBox Margin="5" >
                
            </GroupBox>
        </DockPanel>

    </Grid>
</Window>
